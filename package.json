{
  "name": "alertwil",
  "description": "An alert notification system using Twilio",
  "version": "0.1.0",
  "author": {
    "name": "bouzuya",
    "email": "m@bouzuya.net",
    "url": "http://bouzuya.net/"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "8"
          }
        }
      ]
    ]
  },
  "beater": {
    "dir": "./.tmp/es5/test/",
    "require": [
      "./scripts/enable-power-assert.js"
    ]
  },
  "bugs": {
    "url": "https://github.com/bouzuya/alertwil/issues"
  },
  "dependencies": {
    "aws-sdk": "2.4.8",
    "babel-polyfill": "6.9.1",
    "koa": "1.2.0",
    "koa-bodyparser": "2.2.0",
    "koa-logger": "1.3.0",
    "koa-router": "5.4.0",
    "twilio": "2.9.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "beater": "0.4.1",
    "beater-cli": "0.2.4",
    "espower-loader": "1.0.0",
    "npm-run-all": "^4.1.5",
    "power-assert": "1.4.1",
    "proxyquire": "1.7.9",
    "rimraf": "^2.6.3",
    "sinon": "1.17.4",
    "typescript": "1.8.10",
    "typings": "1.3.0",
    "watch": "^1.0.2"
  },
  "engines": {
    "node": "6.3.0"
  },
  "homepage": "https://github.com/bouzuya/alertwil#readme",
  "keywords": [],
  "license": "MIT",
  "main": "./lib/index.js",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/bouzuya/alertwil.git"
  },
  "scripts": {
    "build": "npm-run-all -s 'build:ts' 'build:es2015' 'build:lib'",
    "build:es2015": "babel --out-dir .tmp/es5/ .tmp/es2015/",
    "build:lib": "babel --copy-files --no-comments --out-dir lib/ .tmp/es2015/src/",
    "build:ts": "tsc",
    "clean": "rimraf .tmp/ lib/",
    "install:typings": "typings install",
    "prepublish": "npm-run-all -s 'install:typings' 'clean' 'build'",
    "start": "node ./lib/index.js",
    "test": "beater",
    "watch": "npm-run-all -p 'watch:*'",
    "watch:es2015": "npm run build:es2015 -- --watch",
    "watch:test": "watch --wait 2 'npm test' '.tmp/es5/test/'",
    "watch:ts": "npm run build:ts -- --watch"
  }
}
